#: kivy 1.0.9
#: import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition
<ElementCard@MDCard>:
    radius:'10dp'
    spacing: '10dp'
    padding: '10dp'
    image:''
    text:''
    
    #sub_text:''
    orientation: 'horizontal'
    ripple_behavior:True
    on_release:
        app.root.transition = RiseInTransition()
    Image:
        source: root.image
        halign: 'right'
        
    MDBoxLayout:
        orientation: 'horizontal'
        MDLabel:
            text: root.text
            halign:'center'
            color: 1 , 0 , 0 , 1

           # pos_hint: {'center_y': 0.5}
      
        #MDLabel:
         #   sub_text:root.sub_text
          #  halign: 'center'


<CustomizeScreen@MDBoxLayout>:
    orientation: 'horizontal'
    text:''
    padding:100
    
    MDLabel:
        text: root.text
        halign:'center'
        pos_hint:{'center_y':0.5}
       
        font_size: 30
    MDFillRoundFlatButton:
        text: 'Regresar'
        pos_hint:{'center_x':0.5}
        on_release: 
            app.root.current='screen_principal'
            app.root.transition= SlideTransition(direction='left')

<Ui>:
    
    MDScreen:
        name : 'screen_principal'
        md_bg_color:0.9,0.8,0.6#color fondo
        MDBoxLayout:#distrubicion de cajitas
            orientation : 'vertical'
            MDBoxLayout:
                size_hint: 1,0.2# tamaño x y
                orientation : 'horizontal'
                paddind: '10dp'#margen 
            #MDCard:Tarjeta del menu principal
               
                #radius:'10dp'
                #padding: '10dp'
                #line_color: 0,0,0,0
                MDLabel:

                    text: 'Menu principal'
                    halign: 'center'
                    pos_hint: {'center_y': 0.5}
                    color: 0 , 0 , 0 , 1
                    font_size: 30
                    
                #MDSwitch:
                 #   pos_hint:{'center_y': 0.5}
                   # on_active:
                  #      app.change_style(*args)


            MDGridLayout:
                
                #cols: 3#columnas
                rows:4
                size_hint: 1,2# tamño x, y
                padding : ['10dp','10dp','10dp','10dp']#izquieda, abajo, derecha,arriba
                spacing: '10dp'
                ElementCard:
                    text:'Recomendacion'
                    #sub_text:'foadsjofoiawhf'
                    image:'Sources and Tools/1.png'
                    on_release:
                        root.current='screen1'
                ElementCard:
                    text:'Cupones'
                    image:'Sources and Tools/1.png'
                    on_release:
                        root.current='screen2'
                ElementCard:
                    text:'Mi estilo'
                    image:'Sources and Tools/Screenshot_26.png'
                    on_release:
                        root.current='screen3'
                ElementCard:
                    text:'Catalogo'
                    image:'Sources and Tools/Screenshot_26.png'
                    on_release:
                        root.current='screen4'
                
    MDScreen:
        name:'screen1'
        CustomizeScreen:
            text:'Escanea '
            
    MDScreen:
        name:'screen2'
