#: kivy 1.0.9
#: import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition
<ElementCard@MDCard>:
    radius:'10dp'
    spacing: 0.7
    padding: 0.2
    #size_hint: None,None
    #size: '750dp','120dp'
    image:''
    text:''
    
    orientation: 'horizontal'
    ripple_behavior:True
    md_bg_color: 0.96, 0.96, 0.86, 0.5 # Color beige

    on_release:
        app.root.transition = RiseInTransition()
        
    MDBoxLayout:
        orientation: 'horizontal'
        MDLabel:
            text: root.text
            halign:'center'
            color: 0 , 0 ,0 , 1#letra
    Image:
        source: root.image
        halign: 'left'
<ElementCard2@MDCard>:
    radius:'5dp'
    spacing: 0.3
    padding: 1
    #size_hint: None,None
    #size: '750dp','120dp'
    image:''
  
    orientation: 'horizontal'
    ripple_behavior:True
    md_bg_color: 0.96, 0.96, 0.86, 0.5 # Color beige

    on_release:
        app.root.transition = RiseInTransition()
        
  
    Image:
        source: root.image
        #size_hint_y: None
        #height: self.width  # Iguala la altura a la anchura para que la imagen se muestre cuadrada
        #allow_stretch: True
        #keep_ratio: True
        halign: 'center'
       



<CustomizeScreen@MDBoxLayout>:
    orientation: 'horizontal'
    text:''
    padding:100
    
    MDLabel:
        text: root.text
        halign:'center'
        pos_hint:{'center_y':0.5}
       
        font_size: 30
    MDFillRoundFlatButton:
        text: 'Regresar'
        pos_hint:{'center_x':0.5}
        on_release: 
            app.root.current='screen_principal'
            app.root.transition= SlideTransition(direction='left')
