<LoginApp>:
    name: 'registerscreen'
    MDScreen:
        md_bg_color:0.9,0.8,0.6
        MDBoxLayout:
            orientation: 'vertical'
            MDLabel:
                text: 'FASHON FINDER'
                halign:'center'
               
                post_hint:{'center_y':0.5,'center_x':0.1}
                color: 0,0,0,1
                font_size:30
            MDLabel:
                text:'Tu rostro es la clave para desbloquear el mundo de la moda'
                halign:'center'
                post_hint:{'center_y':0.5,'center_x':0.2}
                color:0,0,0,1

            MDTextField:
                
                id: sign_in_username
                hint_text: 'Nombre de usuario'
                color: 0,0,0,1
            MDTextField:
                
                id: sign_in_password
                hint_text: 'Contraseña'
                password: True
                color: 0,0,0,1
            MDRaisedButton:
                text: 'Iniciar Sesión'
                on_release: app.sign_in()


