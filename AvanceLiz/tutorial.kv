#: kivy 1.0.9
#: import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition
<ElementCard@MDCard>:
    radius:'10dp'
    spacing: 0.7
    padding: 0.2
    #size_hint: None,None
    #size: '750dp','120dp'
    image:''
    text:''
    sub_text: ''
    
    orientation: 'horizontal'
    ripple_behavior:True
    md_bg_color: 0.96, 0.96, 0.86, 0.5 # Color beige

    on_release:
        app.root.transition = RiseInTransition()
        
    MDBoxLayout:
        orientation: 'horizontal'
        MDLabel:
            text: root.text
            font_name: 'fonts/DellaRespira-Regular.ttf'
            halign:'center'
            theme_text_color: "Custom"
            font_size: '18sp'
            valign: 'center'
            
        MDLabel:
            text: root.sub_text
            font_name: 'fonts/DellaRespira-Regular.ttf'
            halign:'center'
            font_size: '12sp'
            text_color: 0, 0, 0, 1  # Color de letra
            valign: 'center'
    Image:
        source: root.image
        halign: 'left'
        size_hint_x: 0.3  # Ajustar este valor para cambiar el tamaño de la imagen


<ElementCard2@MDCard>:
    radius:'5dp'
    spacing: 0.3
    padding: 1
