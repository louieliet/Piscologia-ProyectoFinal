<PreEmotionRecognition>:
    name: 'PreEmotionRecognition'
    canvas.before:
        Color:
            rgba: 0.9, 0.8, 0.6, 1  # Color de fondo sólido
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Sources and Tools/gradiente_dorado.png'  # Ruta de la imagen de gradiente dorado

    MDBoxLayout:
        size_hint: 1, None
        height: self.minimum_height
        orientation: 'vertical'
        spacing: '20dp'
        pos_hint: {'center_y': 0.8}

        MDLabel:
            text: '- Recomendaciones -'
            font_name: 'fonts/DellaRespira-Regular.ttf'
            halign: 'center'
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: '30sp'
            size_hint_y: None
            

        MDLabel:
            text: 'Nuestras recomendaciones para ti el día de hoy, de acuerdo a tu estilo: Romantico'
            font_name: 'fonts/DellaRespira-Regular.ttf'
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            font_size: '20sp'
            halign: 'center'
            valign: 'middle'
            markup: True
            size_hint_y: None

        MDLabel:
            text: 'Recuerda que durante este proceso, tomamos información de tu rostro a partir de tu cámara.'
            font_name: 'fonts/DellaRespira-Regular.ttf'
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            font_size: '15sp'
            disabled: True
            halign: 'center'
            valign: 'middle'
            markup: True
            size_hint_y: None


    GridLayout:
        cols: 2
        spacing: '10dp'
        size_hint_y: None
        height: '48dp'

        MDFillRoundFlatButton:
            text: 'Regresar'
            theme_text_color: 'Custom'
            text_color: 0, 0, 0, 1
            md_bg_color: 0.66, 0.66, 0.56, 0.5
            on_release:
                app.root.current = 'menu'
                app.root.transition = SlideTransition(direction='right')

        MDFillRoundFlatButton:
            text: 'Ir a las recomendaciones'
            theme_text_color: 'Custom'
            text_color: 0, 0, 0, 1
            md_bg_color: 0.66, 0.66, 0.56, 0.5
            on_release:
                app.root.current = 'EmotionRecognition'
                app.root.transition = SlideTransition(direction='right')


               
<EmotionRecognition>
    name: 'EmotionRecognition'
    on_enter: app.startpassImage()
    canvas.before:
        Color:
            rgba: (0.9, 0.8, 0.6, 1)  # Color de fondo sólido
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Sources and Tools/gradiente_dorado.png'  # Ruta de la imagen de gradiente dorado
    
    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: dp(200), dp(200)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        AsyncImage:
            id: recomendation_image
            source: ''
            size_hint: None, None
            size: dp(200), dp(200)
            allow_stretch: True
            keep_ratio: True
    
    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: dp(200), dp(200)
        pos_hint: {'center_x': 0.5, 'top': 1}

        MDLabel:
            id: emotion_label
            text: ''
            theme_text_color: "Custom"
            color: 1, 1, 1, 1

        MDLabel:
            id: detection_label
            text: ''
            theme_text_color: "Custom"
            color: 1, 1, 1, 1
    
    GridLayout:
        cols: 2
        spacing: '10dp'
        size_hint_y: None
        height: '48dp'

        MDFillRoundFlatButton:
            text: 'Regresar'
            theme_text_color: 'Custom'
            text_color: 0, 0, 0, 1
            md_bg_color: 0.66, 0.66, 0.56, 0.5
            on_release:
                app.root.current = 'menu'
                app.root.transition = SlideTransition(direction='right')

        MDFillRoundFlatButton:
            text: 'Siguiente'
            theme_text_color: 'Custom'
            text_color: 0, 0, 0, 1
            md_bg_color: 0.66, 0.66, 0.56, 0.5
            on_release:
                app.passImage_emotion()



