<MDTextField>:
    hint_text_color: 0, 0, 0, 1  # Color del texto de sugerencia
    color_active: 0, 0, 0, 1  # Color del texto cuando el campo está activo
    line_color_focus: 0, 0, 0, 1  # Color de la línea cuando el campo está activo
    line_color_normal: 0, 0, 0, 1  # Color de la línea cuando el campo no está activo


AppManager:
    Inicio:
    LoginApp:
    Menu:
    PreEmotionRecognition:
    EmotionRecognition:
    TestResult:
    Cupones:
    MiEstilo:
    Catalogo:
    Cupon1:
