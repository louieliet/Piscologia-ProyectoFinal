<Inicio>:
    name:'Inicio'
    MDScreen:
        canvas.before:
            Color:
                rgba: (0.9, 0.8, 0.6, 1)  # Color de fondo sólido
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'Sources and Tools/gradiente_dorado.png'  # Ruta de la imagen de gradiente dorado

        MDBoxLayout:
            orientation: 'vertical'

            MDBoxLayout:
                size_hint: 1, 0.2
                orientation: 'horizontal'
                padding: '10dp'  # Corregir la propiedad de padding

                MDLabel:
                    text: '- Bienvenido -'
                    font_name: 'fonts/DellaRespira-Regular.ttf'
                    halign: 'center'
                    pos_hint: {'center_y': 0.5}
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    font_size: 30

            MDGridLayout:
                rows: 4
                size_hint: 1, 2
                padding: ['10dp', '10dp', '10dp', '10dp']
                spacing: '10dp'

                MDCard:
                    orientation: 'vertical'
                    BoxLayout:
                        canvas.before:
                            Color:
                                rgba: (0.9, 0.8, 0.6, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        AsyncImage:
                            source: 'Sources and Tools/FF.png'
                   
                MDLabel:
                    text: 'FashionFinder'
                    font_name: 'fonts/DellaRespira-Regular.ttf'
                    halign: 'center'
                    pos_hint: {'center_y': 0.5}
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    font_size: 30
                    
                MDLabel:
                    text: ' Tu estilo, en un escaneo'
                    font_name: 'fonts/DellaRespira-Regular.ttf'
                    halign: 'center'
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    font_size: 30
                
                MDFillRoundFlatButton:
                    text: 'Login'
                    theme_text_color: "Custom"
                    font_name: 'fonts/DellaRespira-Regular.ttf'
                    text_color: 0, 0, 0, 1
                    md_bg_color: 0.66, 0.66, 0.56, 0.5
                    on_release: 
                        app.root.current = 'registerscreen'
                        app.root.transition = SlideTransition(direction='right')

                

<LoginApp>:
    name: 'registerscreen'
    MDScreen:
        canvas.before:
            Color:
                rgba: (0.9, 0.8, 0.6, 1)  # Color de fondo sólido
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'Sources and Tools/gradiente_dorado.png'  # Ruta de la imagen de gradiente dorado

        MDBoxLayout:
            orientation: 'vertical'
            spacing: '10dp'
            padding: '20dp'

            MDLabel:
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                text: 'FASHION FINDER'
                halign: 'center'
                font_name: 'fonts/DellaRespira-Regular.ttf'
                font_size: '36sp'

            ElementCard2:
                md_bg_color: 0.9, 0.8, 0.6
                image: 'Sources and Tools/FF.png'

            MDLabel:
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                text: ' - Tu rostro es la clave para desbloquear el mundo de la moda -'
                halign: 'center'
                font_name: 'fonts/DellaRespira-Regular.ttf'
                font_size: '16sp'


            MDTextField:
                id: sign_in_username
                hint_text: ' > Nombre de usuario'
                font_name: 'fonts/DellaRespira-Regular.ttf'
                line_color_normal: 0, 0, 0, 1
                text_color: 0, 0, 0, 11

            MDTextField:
                id: sign_in_password
                hint_text: ' > Contraseña'
                font_name: 'fonts/DellaRespira-Regular.ttf'
                password: True
