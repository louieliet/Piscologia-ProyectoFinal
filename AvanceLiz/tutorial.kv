                line_color_focus: 0, 0, 0, 1
                text_color: 0, 0, 0, 1

            MDFillRoundFlatButton:
                text: 'Iniciar Sesión'
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                md_bg_color: 0.66, 0.66, 0.56, 0.5
                font_name: 'fonts/DellaRespira-Regular.ttf'
                font_size: '16sp'
