        #height: self.width  # Iguala la altura a la anchura para que la imagen se muestre cuadrada
        #allow_stretch: True
        #keep_ratio: True
        halign: 'center'
       



<CustomizeScreen@MDBoxLayout>:
    orientation: 'horizontal'
    text:''
    padding:100
    
    MDLabel:
